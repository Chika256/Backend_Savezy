# flask connfig
FLASK_APP=run.py
FLASK_ENV=development
SECRET_KEY=your-secret-key-here-change-in-production

# db config
# For PostgreSQL:
# DATABASE_URL=postgresql://username:password@localhost:5432/savezy_db
# For MySQL:
# DATABASE_URL=mysql+pymysql://username:password@localhost:3306/savezy_db
# For SQLite (development):
DATABASE_URL=sqlite:///savezy.db

JWT_SECRET_KEY=your-jwt-secret-key-here-change-in-production
JWT_ACCESS_TOKEN_EXPIRES=3600

CORS_ORIGINS=*

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:5000/api/auth/google/callback
JWT_EXPIRATION_HOURS=24

# Mobile App Allowed Redirect URIs (comma-separated)
ALLOWED_MOBILE_REDIRECT_URIS=myapp://auth/callback,savezy://auth/callback