{
  "info": {
    "name": "Savezy Auth API",
    "description": "Google OAuth + JWT Authentication API Testing",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "1. Google OAuth Init",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/auth/google/init?redirect_uri=myapp://auth/callback",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "google", "init"],
              "query": [
                {
                  "key": "redirect_uri",
                  "value": "myapp://auth/callback"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "2. Google OAuth Callback",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"code\": \"PASTE_CODE_FROM_GOOGLE\",\n  \"state\": \"PASTE_STATE_FROM_INIT\",\n  \"redirect_uri\": \"myapp://auth/callback\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/google/callback",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "google", "callback"]
            }
          },
          "response": []
        },
        {
          "name": "3. Verify JWT Token",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"token\": \"{{jwt_token}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/token/verify",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "token", "verify"]
            }
          },
          "response": []
        },
        {
          "name": "4. Refresh JWT Token",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"token\": \"{{jwt_token}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/token/refresh",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "token", "refresh"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Expenses (Protected)",
      "item": [
        {
          "name": "Create Expense",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Lunch\",\n  \"amount\": 15.50,\n  \"category\": \"Food\",\n  \"description\": \"Team lunch\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/expenses",
              "host": ["{{base_url}}"],
              "path": ["api", "expenses"]
            }
          },
          "response": []
        },
        {
          "name": "List Expenses",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/expenses",
              "host": ["{{base_url}}"],
              "path": ["api", "expenses"]
            }
          },
          "response": []
        },
        {
          "name": "Get Expense by ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/expenses/1",
              "host": ["{{base_url}}"],
              "path": ["api", "expenses", "1"]
            }
          },
          "response": []
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:5000",
      "type": "string"
    },
    {
      "key": "jwt_token",
      "value": "PASTE_YOUR_JWT_TOKEN_HERE",
      "type": "string"
    }
  ]
}
